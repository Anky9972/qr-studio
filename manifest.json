{
  "manifest_version": 3,
  "name": "QR Studio - Scanner & Generator",
  "version": "2.0.0",
  "description": "Modern QR/Barcode scanner with Fluent Design. Scan webpages, use camera, generate codes. Fast, private, and beautiful.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "downloads",
    "tabs",
    "notifications",
    "scripting",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jsQR.min.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "commands": {
    "scan-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Scan current page"
    },
    "open-camera": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Open camera scanner"
    },
    "focus-generate": {
      "suggested_key": {
        "default": "Ctrl+Shift+G"
      },
      "description": "Focus generate tab"
    }
  }
}
